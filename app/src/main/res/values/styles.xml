<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/redPrimary</item>
        <item name="colorPrimaryDark">@color/redPrimaryDark</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>


    </style>

    <style name="SPDefaultImpl" parent="SublimePickerStyleLight">
        <item name="colorAccent">@color/redPrimary</item>
        <item name="colorPrimaryDark">@color/redPrimaryDark</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="AppTheme.MagnitTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/redPrimary</item>
        <item name="colorPrimaryDark">@color/redPrimaryDark</item>
        <item name="colorAccent">@color/redAccent</item>

        <item name="sublimePickerStyle">@style/SPDefaultImpl</item>
    </style>

    <style name="progressLine" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint" tools:targetApi="lollipop">@color/cardViewComplete</item>
        <item name="android:scaleY">5</item>
    </style>

</resources>