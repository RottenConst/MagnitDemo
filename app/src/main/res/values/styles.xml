<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.MagnitTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/redPrimary</item>
        <item name="colorPrimaryDark">@color/redPrimaryDark</item>
        <item name="colorAccent">@color/redAccent</item>
    </style>

    <style name="progressLine" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint" tools:targetApi="lollipop">@color/redPrimary</item>
        <item name="android:scaleY">8</item>
    </style>

</resources>